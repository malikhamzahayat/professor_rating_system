<p style="color: green"><%= notice %></p>


<div class="jumbotron">
  <h1 class="display-4"><%= @course.name %></h1>
  
  <br>

  <h2>Professors for this course</h2>
  <div>
    <table class="table table-striped table-bordered table-hover">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Rating</th>
        </tr>
      </thead>



      <div id="professor">
        <tbody>
          <% @course.professors.each do |professor| %>
            
            <tr>
              <td>
                <%= link_to professor.name, professor %>
              </td>
              <td>
                  <% professor.reviews.average(:rating).to_i.times do  %>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                      <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                    </svg>
                  <% end %>
                    
              </td>
              

            </tr>


          <% end %>  

        </tbody>
        
      </div>
  </table>
  </div>
  <div>
    <%= link_to "Edit this course", edit_course_path(@course), class:"btn btn-secondary" %> 
    <%= link_to "Back to courses", courses_path, class:"btn btn-secondary" %>
    <br>
    <br>
    
    <%= button_to "Destroy this course", @course, class:"btn btn-danger", method: :delete %>
  </div>

</div>



